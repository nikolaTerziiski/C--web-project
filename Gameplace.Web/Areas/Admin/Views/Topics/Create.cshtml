@model CreateTopicBindingModel
@{
    ViewData["Title"] = "Create";
}

<form asp-area="Admin" asp-controller="Topics" asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Name" class="control-label col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" placeholder="Enter Name of the topic" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" placeholder="Enter the content of the topic" asp-for="Content">
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Add topic" class="btn btn-success" />
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
