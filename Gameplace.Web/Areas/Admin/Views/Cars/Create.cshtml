@model CreateCarBindingModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-area="Admin" asp-controller="Cars" asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Brand" class="control-label col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" placeholder="Enter brand of the car" asp-for="Brand">
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CarModel" class="control-label col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" placeholder="Enter the model of the car" asp-for="CarModel">
            <span asp-validation-for="CarModel" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" placeholder="Enter image of the car" asp-for="ImageUrl">
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="TypeOfCar" class="control-label col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" placeholder="Enter the car type of the car" asp-for="TypeOfCar">
            <span asp-validation-for="TypeOfCar" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <span class="text-danger">@ViewData["InvalidCarType"]</span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Add car" class="btn btn-success" />
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
